            <Button Content="捐助支持并去广告" Click="Donate_Click" HorizontalAlignment="Center"/>
        --></StackPanel>
        <JiuYouAdUniversal:AdControl x:Name="Interst"             
                             ApplicationKey="b7da690d5a4ec86af4f548612ec392c1"
                             AdType="Interstitial" 
                             VerticalAlignment="Bottom" 
                             Grid.Row="4"         
                              />
    </Grid>
</Page>
