<Page
    x:Class="ofo.Views.GuidePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ofo.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <FlipView Background="#feda00">

            <FlipViewItem>
                <Image Source="ms-appx:///Assets/Images/Guide/1.jpg"/>
            </FlipViewItem>

            <FlipViewItem>
                <Image Source="ms-appx:///Assets/Images/Guide/2.jpg"/>
            </FlipViewItem>

            <FlipViewItem>
                <Image Source="ms-appx:///Assets/Images/Guide/3.jpg"/>
            </FlipViewItem>

            <FlipViewItem>
                <Image Source="ms-appx:///Assets/Images/Guide/4.jpg"/>
            </FlipViewItem>
                       
            <FlipViewItem>
                <Grid>
                    <Image Source="ms-appx:///Assets/images/Guide/5.jpg"/>
                    <Button HorizontalAlignment="Center" VerticalAlignment="Bottom" Content="立即体验" Margin="0,0,0,20" Click="Enter_Click" BorderThickness="0" FontSize="20"/>
                </Grid>
            </FlipViewItem>
        </FlipView>
    </Grid>
</Page>
